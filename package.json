{
  "name": "subscription-service",
  "version": "1.0.0",
  "description": "Subscription Microservice - Subscription lifecycle, renewals, upgrades, and downgrades",
  "main": "dist/src/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/src/index.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "db:setup": "prisma generate && prisma migrate dev && tsx prisma/seed.ts",
    "lint": "eslint src/**/*.ts",
    "test": "vitest",
    "docker:build": "docker build -t subscription-service .",
    "docker:run": "docker run -p 3005:3005 subscription-service"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "keywords": [
    "microservice",
    "subscription",
    "renewals",
    "upgrades",
    "billing"
  ],
  "author": "SuperAdmin Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.10.0",
    "amqplib": "^0.10.9",
    "bcryptjs": "^3.0.3",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.3.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^5.10.0"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.7",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.17",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.3.0"
  }
}
